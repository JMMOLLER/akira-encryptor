{
  "name": "@akira-encryptor/core",
  "version": "0.4.0-beta",
  "author": "JMMOLLER",
  "files": ["dist", "utils"],
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./utils": {
      "import": {
        "types": "./dist/esm/utils/index.d.ts",
        "default": "./dist/esm/utils/index.js"
      },
      "require": {
        "types": "./dist/cjs/utils/index.d.cts",
        "default": "./dist/cjs/utils/index.cjs"
      }
    },
    "./workers/encryptor.worker": {
      "import": "./dist/esm/workers/encryptor.worker.js",
      "require": "./dist/cjs/workers/encryptor.worker.cjs"
    }
  },
  "scripts": {
    "typecheck": "bun tsc --noEmit -p tsconfig.json",
    "tests": "bun run build && bun vitest",
    "build": "rm -rf dist && tsc -p tsconfig.json && cp types.d.ts dist/types/types.d.ts && bun run build:workers",
    "clean": "rm -rf dist",
    "build:workers": "bun build ./workers/encryptor.worker.ts --target=node --format=cjs --outfile=./dist/cjs/workers/encryptor.worker.cjs --minify && bun build ./workers/encryptor.worker.ts --target=node --format=esm --outfile=./dist/esm/workers/encryptor.worker.js --minify",
    "build:cjs": "tsup ./index.ts --format=cjs --platform=node --outDir=./dist/cjs/ --sourcemap --dts && tsup ./utils/index.ts --format=cjs --platform=node --outDir=./dist/cjs/utils/ --sourcemap --dts",
    "build:esm": "tsup ./index.ts --format=esm --platform=node --outDir=./dist/esm/ --sourcemap --dts && tsup ./utils/index.ts --format=esm --platform=node --outDir=./dist/esm/utils/ --sourcemap --dts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.5.0",
    "vitest": "^3.2.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@types/hidefile": "^3.0.3",
    "@types/libsodium-wrappers": "^0.7.14",
    "chalk": "^5.4.1",
    "cli-spinners": "^3.2.0",
    "dotenv": "^16.5.0",
    "hidefile": "^3.0.0",
    "libsodium-wrappers": "^0.7.15",
    "lowdb": "^7.0.1",
    "nanoid": "^5.1.5",
    "p-limit": "^6.2.0",
    "piscina": "^5.0.0",
    "zod": "^3.25.56"
  }
}
