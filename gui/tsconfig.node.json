{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/**/*", "../core/**/*", "../types.d.ts", "types.d.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["../../core/*"],
      "@workers/*": ["./workers/*"],
      "@gui/utils/*": ["./utils/*"],
      "@libs/*": ["../../core/libs/*"],
      "@gui/configs/*": ["./configs/*"],
      "@utils/*": ["../../core/utils/*"],
      "@configs/*": ["../../core/configs/*"],
      "@adapters/*": ["../../core/adapters/*"],
    },
  }
}
