{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/preload/**/*",
    "src/configs/**/*",
    "src/workers/**/*",
    "src/utils/**/*",
    "src/main/**/*",
    "types.d.ts",
    "utils/**/*",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "Bundler",
    "noUnusedLocals": false,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["./utils/*"],
      "@configs/*": ["./configs/*"],
    },
  }
}
