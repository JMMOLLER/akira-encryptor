{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/preload/**/*", "../core/**/*", "../types.d.ts", "types.d.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["../../core/*"],
      "@utils/*": ["../../core/utils/*"],
      "@libs/*": ["../../core/libs/*"],
      "@configs/*": ["../../core/configs/*"],
    },

  }
}
