{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*.tsx",
    "src/renderer/src/**/*.ts",
    "../core/globals.d.ts",
    "src/preload/*.d.ts",
    "../core/utils/*",
    "types.d.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@utils/*": ["./utils/*"],
      "@workers/*": ["./workers/*"],
      "@configs/*": ["./configs/*"],
    }
  }
}
