{
  "name": "akira-encryptor",
  "module": "cli/main.ts",
  "type": "module",
  "scripts": {
    "test": "bun vitest",
    "start": "bun run cli/main.ts",
    "debug": "bunx tsx cli/main.ts",
    "build": "esbuild cli/main.ts --bundle --platform=node --target=node22 --outfile=cli/dist/main.cjs --format=cjs",
    "build:win": "bun run build && pkg cli/dist/main.cjs --target node18-win-x64 --output cli/dist/akira-encryptor-cli-v0.1.0-beta.exe"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/cli-progress": "^3.11.6",
    "@types/libsodium-wrappers": "^0.7.14",
    "esbuild": "^0.25.4",
    "pkg": "^5.8.1",
    "tsx": "^4.19.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "cli-progress": "^3.12.0",
    "dotenv": "^16.5.0",
    "inquirer": "^12.5.2",
    "libsodium-wrappers": "^0.7.15",
    "lowdb": "^7.0.1",
    "nanoid": "^5.1.5",
    "zod": "^3.24.2"
  }
}
